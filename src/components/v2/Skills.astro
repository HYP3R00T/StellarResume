---
import { skills_config } from "@/config";

import HorizontalLine from "@/components/common/HorizontalLine.astro";
---

{
  skills_config.visible && (
    <div class="_skill_section flex flex-col">
      <div class="">
        <h2 class="">{skills_config.name}</h2>
        <HorizontalLine />
      </div>
      <div class="_skill_cards flex flex-wrap pl-4 py-2 gap-2">
        {skills_config.items.length != 0 &&
          skills_config.items
            .filter((item) => item.visible)
            .map((item) => (
              <div class="_skill_card w-[calc(50%-0.5rem)] flex flex-col">
                {item.category_name_visible && (
                  <h3 class="_skill_title font-semibold">{item.category}</h3>
                )}
                <p class="_skill_subtitle text-13px first:pl-0">
                  {item.skills}
                </p>
              </div>
            ))}
      </div>
    </div>
  )
}

<style is:global>
  ._skill_card {
    break-inside: avoid-page;
  }
</style>
